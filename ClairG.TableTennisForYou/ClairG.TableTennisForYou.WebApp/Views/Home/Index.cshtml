
@{
    ViewBag.Title = "HomePage";
}

<style type="text/css">
    #banner h3{
        font: bold 22px arial,verdana;
    }
    #banner p {
        font: bold 16px arial,verdana;
    }
</style>

<!--Carousel-->
<div id="banner" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#banner" data-slide-to="0" class="active"></li>
        <li data-target="#banner" data-slide-to="1"></li>
        <li data-target="#banner" data-slide-to="2"></li>
        <li data-target="#banner" data-slide-to="3"></li>
    </ol>

    <!-- Content -->
    <div class="carousel-inner" role="listbox">
        <!-- Slide 1 -->
        <div class="item active">
            <img src="~/Images/banner0.jpg" />
            <div class="carousel-caption">
                <p>Liebherr 2019 ITTF World Table Tennis Championships</p>
                <h3>Men's Singles Champion - MA Long</h3>
            </div>
        </div>
        <!-- Slide 2 -->
        <div class="item">
            <img src="~/Images/banner2.jpeg" />
            <div class="carousel-caption">
                <p>Liebherr 2019 ITTF World Table Tennis Championships</p>
                <h3>Women's Singles Champion - LIU Shiwen</h3>
            </div>
        </div>
        <!-- Slide 3 -->
        <div class="item">
            <img src="~/Images/banner3.jpg" />
            <div class="carousel-caption">
                <p>Liebherr 2019 ITTF World Table Tennis Championships</p>
                <h3>Women's Doubles Champions - SUN Yingsha and WANG Manyu</h3>
            </div>
        </div>
        <!-- Slide 4 -->
        <div class="item">
            <img src="~/Images/banner4.jpg" />
            <div class="carousel-caption">
                <p>Liebherr 2019 ITTF World Table Tennis Championships</p>
                <h3>Mixed Doubles Champions - XU Xin and LIU Shiwen</h3>
            </div>
        </div>
    </div>

    <!-- Previous/Next controls -->
    <a class="left carousel-control" href="#banner" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#banner" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

